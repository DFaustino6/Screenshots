function verificaactividades(opcao, numdias, numhoras) {

	var i=3;
	var box;
	var ok=true;
	var temp;
	var str="Os seguintes campos devem ser preenchidos:\n\n";

	if(opcao==0) {
		box=document.forms[0].selcampus;
		if(box.value==0) {
			str=str+"- Campus\n";
			box.focus();
			ok=false;
		}
		box=document.forms[0].selinstituicao;
		if(box.value==0) {
			str=str+"- Instituição\n";
			if(ok)
				box.focus();
			ok=false;
		}
		i=i+2;
	}

	box=document.forms[0].seldepartamento;
	if(box.value==0) {
		str=str+"- Departamento/Área/Núcleo/Curso\n";
		if(ok)
			box.focus();
		ok=false;
	}
	i=i+1;

	box=document.forms[0].seltipoactividade;
	if(box.value==0) {
		str=str+"- Tipo de Actividade\n";
		if(ok)
			box.focus();
		ok=false;
	}
	i=i+1;

	box=document.forms[0].seldescricao;
	if(!box.value) {
		str=str+"- Título/Descrição\n";
		if(ok)
			box.focus();
		ok=false;
	}
	i=i+1;

	box=document.forms[0].sellocal;
	if(!box.value) {
		str=str+"- Local\n";
		if(ok)
			box.focus();
		ok=false;
	}
	i=i+1;

	box=document.forms[0].selduracao;
	if(!box.value) {
		str=str+"- Duração\n";
		if(ok)
			box.focus();
		ok=false;
	}
	i=i+1;

	box=document.forms[0].selnummaxalunos;
	if(!box.value) {
		str=str+"- Número de Participantes\n";
		if(ok)
			box.focus();
		ok=false;
	}
	i=i+1;

	temp=false;
	for(j=i; j<i+numdias; j++)
		if(document.forms[0].elements[j].checked)
			temp=true;
	if(!temp) {
		str=str+"- Dias\n";
		if(ok)
			document.forms[0].elements[i].focus();
		ok=false;
	}
	i=i+numdias;

	temp=false;
	for(j=i; j<i+numhoras; j++)
		if(document.forms[0].elements[j].checked)
			temp=true;
	if(!temp) {
		str=str+"- Horas\n";
		if(ok)
			document.forms[0].elements[i].focus();
		ok=false;
	}
	//i=i+1;
	if(!ok)
		alert(str);

	return ok;
}

