function setCheckedValue(radioObj) {

    if(!radioObj)
	return;

    var radioLength = radioObj.length;

    if( isNaN(radioLength) ) {
	radioObj.checked = false;
    }
    for(var i = 0; i < radioLength; i++) {
	radioObj[i].checked = false;
    }

}

