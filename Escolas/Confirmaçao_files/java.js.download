function limpar() {

    var j;
    //var aux;

    //alert("Limpar tudo");
    for(j=0; j< document.forms[0].elements.length; j++) {
	aux=document.forms[0].elements[j];
	if(aux.type=="text") {
	    aux.value="";
	}else if (aux.type=="radio"){
	    setCheckedValue(aux);
	    //aux.checked==false;
	}else if (aux.type=="select-one") {
	    aux.selectedIndex=0;
	}
    }

    //window.refresh();
    return true;
}

