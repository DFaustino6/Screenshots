function confirmdelete(form) {
    var del1=confirm('Cancelar este registo?');
    if(del1!=true) {
        alert('OK, não cancelar.');
        history.back();
        return false;
    }else{
        var del2=confirm('Tem a certeza?');
        if(del2!=true) {
            alert('Uff...');
            history.back();
            return false;
        }else{
            var mot = prompt("Indique o motivo do cancelamento...");
            if(mot==null || mot=="") {
                alert("Como não foi indicado um motivo, o grupo não foi cancelado...");
                history.back();
                return false;
            }else{
                document.formdelete.motivo.value=mot;
                //alert(mot);
                form.submit();
                return true;
            }
        }
    }
}


